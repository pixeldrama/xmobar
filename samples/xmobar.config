Config { font = "-*-Fixed-Normal-R-Normal-*-10-*-*-*-*-*-*-*"      
      , borderColor = "black"
      , border = TopB
      , bgColor = "black"
      , fgColor = "grey"
      , position = TopW L 100
      , lowerOnStart = False
      , commands = [ Run Cpu ["-L", "3"
                             , "-H", "50"
                             , "--normal", "green"
                             , "--high","red"] 10                   
                   , Run Memory ["-t","Mem: <usedratio>%"] 10
                   , Run Date "%y %m %_d %H:%M:%S" "date" 10
		   , Run Battery [ "-L", "15"
                                 , "-H", "60"
                                 , "--high", "green"
                                 , "--normal"
                                 , "yellow"
                                 , "--low"
                                 , "red" ] 500
                   , Run Wireless "wlan0" [] 100
                   , Run Volume "default" "Master" [] 10
                   , Run Kbd [("us(altgr-intl)", "US"), ("de", "DE")]
                   , Run StdinReader ]
      , sepChar = "%"
      , alignSep = "}{"
      , template = "%StdinReader% }{ %cpu% | %memory% | %battery% | %wlan0wi% | %default:Master%| %kbd% | <fc=#ee9a00>%date%</fc>"
      }